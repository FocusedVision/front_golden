# ==================================
# Next.js Frontend Environment Configuration
# ==================================
# Copy this file to .env.local and fill in your actual values

# ==================================
# APPLICATION CONFIGURATION
# ==================================

# Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# ==================================
# AUTHENTICATION & SECURITY
# ==================================

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration (if using custom auth)
JWT_SECRET=your-super-secret-jwt-key-make-this-very-long-and-random
JWT_EXPIRES_IN=15m

# ==================================
# THIRD-PARTY AUTHENTICATION
# ==================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==================================
# PAYMENT PROCESSING
# ==================================

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ==================================
# ANALYTICS & MONITORING
# ==================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-project-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Mixpanel Analytics (alternative)
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-url

# ==================================
# FEATURE FLAGS & TOGGLES
# ==================================

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_PWA=false

# ==================================
# EXTERNAL APIS
# ==================================

# File Upload Service
NEXT_PUBLIC_UPLOAD_PRESET=your-cloudinary-upload-preset
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name

# Map Services (if needed)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==================================
# DEVELOPMENT CONFIGURATION
# ==================================

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=true

# API Base URL (for development)
NEXT_PUBLIC_DEV_API_URL=http://localhost:8000/api

# ==================================
# PRODUCTION CONFIGURATION
# ==================================

# Production URLs (uncomment for production)
# NEXT_PUBLIC_APP_URL=https://goldenreputation.io
# NEXT_PUBLIC_API_URL=https://api.goldenreputation.io

# CDN Configuration
# NEXT_PUBLIC_CDN_URL=https://cdn.goldenreputation.io

# ==================================
# REPUTATION MANAGEMENT FEATURES
# ==================================

# Google My Business Integration
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Social Media APIs
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# ==================================
# NOTIFICATION SERVICES
# ==================================

# Browser Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key

# Firebase Configuration (for push notifications)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# ==================================
# SEO & METADATA
# ==================================

# Default SEO Configuration
NEXT_PUBLIC_SITE_NAME=Golden Reputation
NEXT_PUBLIC_SITE_DESCRIPTION=Professional SaaS platform for reputation management
NEXT_PUBLIC_SITE_URL=https://goldenreputation.io
NEXT_PUBLIC_SITE_LOGO=https://goldenreputation.io/logo.png

# ==================================
# PERFORMANCE & OPTIMIZATION
# ==================================

# Bundle Analyzer
ANALYZE=false

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=res.cloudinary.com,images.unsplash.com

# ==================================
# CORS & SECURITY
# ==================================

# CORS Origins (for API requests)
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://goldenreputation.io

# Security Headers
NEXT_PUBLIC_CSP_NONCE=your-content-security-policy-nonce 